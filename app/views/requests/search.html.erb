<h1>Here are the tickets matching your search</h1
<%# ---- TABLE TO RENDER THE SUPPORT TICKET ------- %>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Department</th>
		<th>Description</th>
		<th>Status (I / C)</th>
		<th>Actions</th>
	</tr>
	<% @result.each do |r| %>
	<tr>
		<td><%= r.name %></td>
		<td><%= r.email %></td>
		<td><%= r.department %></td>
		<td><%= r.message %></td>
		<td><%= r.status %></td>
		<td>
			<%= link_to "View", request_path(r) %>
			<%= link_to "Edit", edit_request_path(r) %>
			<%= button_to "Delete", request_path(r), method: :delete, data: {confirm: "Are you sure you want to delete this support request?"} %>
		</td>
	</tr>
<% end %>
</table>

<%# ---- DISPLAY THE PAGNATION OPTIONS ------------------- %>
<%# display the current page of results %>
<p>Page <%= @page + 1 %></p>

<%# only display this link under these conditions %>
<% if @page > 0 %>
<%= link_to "Previous 5 results", search_path(page: @page - 1) %>
<% end %>


<%# only display this link under these conditions %>
<% if @page < @all %>
<%= link_to "Next 5 Results", search_path(page: @page + 1) %>
<% end %>

